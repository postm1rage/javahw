<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="lab6.AppController">
    <left>
        <VBox spacing="10" style="-fx-padding:10;">
            <HBox spacing="5">
                <Button text="Добавить круг" onAction="#addCircle"/>
            </HBox>
            <HBox spacing="5">
                <Button text="Добавить прямоугольник" onAction="#addRectangle"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <Canvas fx:id="canvas"/>
    </center>
</BorderPane>
